{
    "compilerOptions": {
        "typeRoots": [
            "./node_modules/@types"
        ],
        "target": "es2018",
        "module": "commonjs",
        "lib": [
            "es5",
            "es2015",
            "es2017",
            "es2018",
            "dom",
            "scripthost"
        ],
        "rootDir": "./src",
        "outDir": "dest",
        "preserveConstEnums": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "removeComments": true,
        // "declaration": true,
    },
    "include": [
        "./src/**/*",
        "**/*.d.ts"
    ],
    "exclude": [
        "./**/*.map.js",
    ]
}